@model Wenba.Models.Course

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h3>确定删除该课程信息吗</h3>
<div>
    <hr />
    <h3>课程名称：@Html.DisplayFor(model => model.CourseName)</h3>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-top:20px">
            <input type="submit" value="删除" class="layui-btn layui-btn-danger" /> |
            @Html.ActionLink("返回列表", "CoursesList")
        </div>
    }
</div>
