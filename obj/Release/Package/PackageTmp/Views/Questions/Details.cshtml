@model Wenba.ViewModels.CompositeQuestion

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>问题或通知详情</h2>

<div class="shared-detail">
    <h4>Question</h4>
    <hr />
    <table class="dl-horizontal">

        <tr>
            <th>内容</th>
            <td>@Html.DisplayFor(model => model.Question.QuestionDesc)</td>
        </tr>
        <tr>
            <th>编号</th>
            <td>@Html.DisplayFor(model => model.Question.QuestionNum)</td>
        </tr>
        <tr>
            <th>项目名称</th>
            <td>@Html.DisplayFor(model => model.Project.ProjectName)</td>
        </tr>
        <tr>
            <th>课程名称</th>
            <td>@Html.DisplayFor(model => model.Course.CourseName)</td>
        </tr>
        <tr>
            <th>备注</th>
            <td>@Html.DisplayFor(model => model.Question.Comments)</td>
        </tr>
        <tr>
            <th>状态</th>
            <td>
                @if (Model.Question.Status == "O         ")
            {
                    @("已发布")
                }
                else
                {
                    @("未发布")
                }
            </td>
        </tr>

    </table>
</div>
<p>
    @if (Model.Question.Status.Contains("C"))
    {
        @Html.ActionLink("编辑", "Edit", new { id = Model.Question.id })
    }

    @Html.ActionLink("返回列表", "Index")
</p>
