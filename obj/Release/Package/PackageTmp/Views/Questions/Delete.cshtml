    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h3>确定删除该条问题吗</h3>
<div>
    <hr />
    <h3>问题内容:@Html.DisplayFor(model => model.QuestionDesc)</h3>
    

